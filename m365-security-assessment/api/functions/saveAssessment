export default async function saveAssessment(req, res) {
    try {
        const assessmentData = req.body;

        // Validate the assessment data
        if (!assessmentData || !assessmentData.metrics || !assessmentData.date) {
            return res.status(400).json({ message: 'Invalid assessment data' });
        }

        // Save the assessment data to the database
        const result = await saveToDatabase(assessmentData);

        return res.status(200).json({ message: 'Assessment saved successfully', result });
    } catch (error) {
        console.error('Error saving assessment:', error);
        return res.status(500).json({ message: 'Internal server error' });
    }
}

