{
  "platform": {
    "apiRuntime": "node:18"
  },
  "build": {
    "env": {
      "NODE_VERSION": "18"
    }
  },
  "routes": [
    {
      "route": "/api/*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/*",
      "allowedRoles": ["anonymous"],
      "rewrite": "/index.html"
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/images/*.png", 
      "/images/*.jpg", 
      "/images/*.gif", 
      "/css/*", 
      "/js/*", 
      "/static/css/*",
      "/static/js/*",
      "/static/media/*",
      "/manifest.json", 
      "/robots.txt", 
      "/favicon.ico"
    ]
  },
  "globalHeaders": {
    "content-security-policy": "default-src https: 'unsafe-eval' 'unsafe-inline'; object-src 'none'; style-src 'self' 'unsafe-inline';"
  },
  "mimeTypes": {
    ".css": "text/css",
    ".js": "application/javascript"
  }
}