{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "checkJs": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": ["es2020"],
    "sourceMap": true,
    "declaration": false,
    "noEmitOnError": true,
    "incremental": true
  },
  "include": [
    "./**/*.ts",
    "shared/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "backup-functions",
    "*.backup",
    "**/*.backup",
    "*backup*",
    "**/*backup*",
    "test-*.js",
    "**/*test*.js",
    "test/index.js",
    "simple-*.js",
    "migrate-*.js",
    "**/*.js"
  ]
}