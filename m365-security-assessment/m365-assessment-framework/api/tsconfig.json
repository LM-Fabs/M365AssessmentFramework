{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": ["es2020"],
    "sourceMap": true
  },
  "include": ["./**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "backup-functions",
    "*.backup",
    "**/*.backup"
  ]
}